<div class="like">
  <span>
    <% if likable.liked_by?(current_user) %>
      <%= link_to "Unlike", likable_like_path(likable), method: :delete %>
    <% else %>
      <%= link_to "Like", likable_like_path(likable), method: :post %>
    <% end %>
  </span>
  <span>
    Likes: <%= likable.likes.count %>
  </span>
</div>
