<div class="comment">
  <div class="picture">
    <%= image_tag @user.profile.picture.url(:thumb) %>
  </div>
  <div class="name">
    <%= link_to comment.author.name, comment.author %>
  </div>
  <div class="time">
    <%= time_ago_in_words(comment.created_at) %> ago
  </div>
  <div class="body">
    <%= comment.body %>
  </div>
  <%= render partial: 'likes/like_button', locals: {likable: comment} %>
</div>
