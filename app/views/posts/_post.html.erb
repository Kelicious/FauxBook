<div class="post">
  <div class="name">
    <%= link_to post.author.name, post.author %>
  </div>
  <div class="time">
    <%= time_ago_in_words(post.created_at) %> ago
  </div>
  <div class="body">
    <%= post.body %>
  </div>
  <div class="comment-section">
    <%= render partial: "comments/form", locals: {
          commentable: post,
          comment: Comment.new
        } %>
    <%= render partial: "comments/comments", locals: {comments: post.comments} %>
  </div>
</div>
